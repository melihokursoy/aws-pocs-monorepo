{
  "name": "@aws-pocs/aws-nestjs-todo-api",
  "version": "1.0.0",
  "description": "Serverless Todo CRUD API using NestJS, Lambda, API Gateway, and DynamoDB with CDK",
  "private": true,
  "type": "module",
  "main": "cdk/lib/index.ts",
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "esbuild src/lambda.ts --bundle --platform=node --target=node20 --outfile=dist/lambda.js --external:@aws-sdk/* --external:@nestjs/websockets --external:@nestjs/microservices && cp swagger.json dist/swagger.json",
    "start": "node dist/lambda.js",
    "cdk:synth": "npx aws-cdk@latest synth",
    "cdk:deploy": "npx aws-cdk@latest deploy --require-approval=never",
    "cdk:destroy": "npx aws-cdk@latest destroy --force",
    "cdk:diff": "npx aws-cdk@latest diff",
    "deploy": "pnpm cdk:deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.500.0",
    "@aws-sdk/lib-dynamodb": "^3.500.0",
    "@codegenie/serverless-express": "^4.14.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^17.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "aws-cdk-lib": "^2.140.0",
    "constructs": "^10.3.0",
    "esbuild": "^0.19.0",
    "source-map-support": "^0.5.21",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  }
}
